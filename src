interface BookData {
    id: string;
    name: string;
    year: number;
    author: string;
    summary: string;
    publisher: string;
    pageCount: number;
    readPage: number;
    reading: boolean;
    finished: boolean;
    insertedAt: Date;
    updatedAt: Date;
}

class Book {
    private readonly data: BookData;

    private constructor(data: BookData) {
        this.data = data;
    }

    public static create(data: BookData): Book {
        return new Book(data);
    }

    public get id(): string {
        return this.data.id;
    }

    public get name(): string {
        return this.data.name;
    }
}